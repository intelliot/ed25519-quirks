{
  "name": "ed25519-quirks",
  "description": "Web part of the Ed25519 Quirks app",
  "version": "0.1.0",
  "main": "src/mount.js",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "lint-wasm:fmt": "cd wasm && cargo fmt -- --check",
    "lint-wasm:check": "cargo check --manifest-path wasm/Cargo.toml --all --tests",
    "lint-wasm:clippy": "cargo clippy --manifest-path wasm/Cargo.toml --all --tests -- -D warnings",
    "lint-wasm": "npm run lint-wasm:fmt && npm run lint-wasm:check && npm run lint-wasm:clippy",
    "lint-web": "eslint --ext .js,.vue src test",
    "build-wasm": "wasm-pack build wasm",
    "test-wasm": "wasm-pack test wasm --headless",
    "test": "karma start --single-run",
    "build-web": "npm run clean && webpack --config webpack.config.js --mode=production",
    "build": "npm run build-wasm && npm run build-web",
    "start": "webpack-dev-server -d"
  },
  "author": "Alex Ostrovski <ostrovski.alex@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "chai-bytes": "^0.1.1",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^2.0.1",
    "dirty-chai": "^2.0.1",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-vue": "^5.0.0",
    "karma": "^3.1.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^4.0.0-rc.5",
    "mocha": "^5.2.0",
    "pug": "^2.0.3",
    "rimraf": "^2.6.2",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "dependencies": {
    "@babel/runtime": "^7.2.0",
    "buffer": "^5.2.1",
    "copy-text-to-clipboard": "^1.0.4",
    "vue": "^2.5.21"
  }
}
