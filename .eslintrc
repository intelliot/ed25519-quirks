{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": "plugin:vue/recommended",
  "rules": {
    "vue/max-attributes-per-line": false,
    "vue/singleline-html-element-content-newline": ["error", {
      "ignores": ["label", "a", "button", "RouterLink"]
    }],
    "object-curly-spacing" : [2, "always"]
  }
}
